{% extends "base.html.twig" %}

{% block body %}


<div class="container my-5">
    <div class="row">
        <div class="col-12 col-md-10 mx-auto">
			<div class="card">
			    <div class="card-header">
			        Clients
			    </div>
			    <div class="card-body">
			        <table class="table">
						<tr>
							<th>Login</th>
							<th>Actif</th>
							<th>Commande</th>
							<th>Panier</th>
						</tr>
						{% for client in clients %}
							<tr>
								<td>{{ client.username }}</td>
								<td>
									{% if client.isActive %}
										oui
									{% else %}
										non
									{% endif %}
								</td>
								<td>
									<a href="{# path('admin.commande.commandeClient', {"id" : client.id}) #}">
										Consulter
									</a>
								</td>
								<td>
									<a href="{{ path('admin.panier.panierClient', {"id" : client.id}) }}">
										Consulter
									</a>
								</td>
							</tr>
						{% endfor %}
					</table>
			    </div>
			 </div>
        </div>
    </div>
 </div>

{% endblock %}







